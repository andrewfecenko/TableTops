{% extends "template.html" %}

{% block additionalCSS %}
<link rel="stylesheet" href="/static/css/explore-spaces.css" media="all" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block body %}


<div class="container-filter">
  <h3>Filters:  </h3>
  <input id="order" name = "Order" list = "OrderList" placeholder = "{{order_table_name}}"/>
    <datalist id = "OrderList">
      <option value = "Title (A-Z)">
      <option value = "Title (Z-A)">
      <option value = "Date (Older-Newer)">
      <option value = "Date (Newer-Older)">
    </datalist>
  <input id="made" name = "MadeBys" list = "MadeByList" placeholder = "{{owner_filer}}"/>
    <datalist id = "MadeByList">
      <option value = "Anyone">
      <option value = "Me">
    </datalist>
</div>


{% if spaces_list is defined %}
{% for space in spaces_list %} 



<div class="row">    
  <br>
  <div class="col-md-2 col-sm-3 text-center">
    <a class="story-img" href="/spaces/{{space.space_id}}/description"><img src="/{{space.photo}}" style="width:150px;height:150px" class="img-circle"></a>
  </div>
  <div class="col-md-10 col-sm-9">
    <h3 class="title-name">{{space.space_name}}</h3>
    <div class="row">
      <div class="col-xs-9">
        <p>{{space.description}}</p>
        <p class="lead" ><a href="/spaces/{{space.space_id}}/description"><button class="btn btn-default">Read More</button></a></p>
        <!-- <p class="pull-right"><span class="label label-default">keyword</span> <span class="label label-default">tag</span> <span class="label label-default">post</span></p>
        <ul class="list-inline"><li><a href="#">2 Days Ago</a></li><li><a href="#"><i class="glyphicon glyphicon-comment"></i> 4 Comments</a></li><li><a href="#"><i class="glyphicon glyphicon-share"></i> 34 Shares</a></li></ul> -->
        </div>
      <div class="col-xs-3"></div>
    </div>
    <br><br>
  </div>
</div>
<hr>

{% endfor %}
{% endif %}

{% if ideas_none is defined %}
  <h3>There are no spaces to see...</h3>
  <a href="/space/add"><button class="btn btn-default">Add One</button></a>
{% endif %}

{% endblock %}

{% block additionalTailJS %}
  <script src="/static/js/explore-spaces.js" type="text/javascript"></script>
{% endblock %}