{% extends "template.html" %}

{% block body %}
<h2>Login to TableTops</h2>
<form role="form" action="{{ url_for('login') }}" method="POST">
  <div class="form-group">
    {% if error %}
      {% if error['email'] %}
        *{{error['email'][0]}} <br>
      {% endif %}
    {% endif %}
    <label for="email">Email:</label>
    <input type="email" class="form-control" id="email" name="email" value="{{request.form.email }}">
  </div>
  <div class="form-group">
     {% if error %}
      {% if error['password'] %}
        *{{error['password'][0]}} <br>
      {% endif %}
    {% endif %}
    <label for="pwd">Password:</label>
    <input type="password" class="form-control" id="pwd" name="password" value="{{request.form.password }}">
  </div>
  <div class="checkbox">
    <label><input type="checkbox"> Remember me</label>
  </div>
  {{ login_form.csrf_token }}
  <button type="submit" class="btn btn-default">Submit</button>
</form>
{% endblock %}